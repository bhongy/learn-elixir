	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "1.13.4"
		}
	},

	"customizations": {
		"vscode": {
      "settings": {
      },
			"extensions": [
        "editorconfig.editorconfig",
